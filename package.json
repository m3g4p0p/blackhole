{
  "name": "blackhole",
  "version": "0.1.23",
  "scripts": {
    "prepare:prod": ".venv/bin/python prepare.py --exclude 'sw.js' '*.json' --add-root",
    "prepare:dev": ".venv/bin/python prepare.py src/media src/icons",
    "deploy": "yarn version --patch --no-git-tag-version && yarn prepare:prod && gh-pages -d dist",
    "upgrade-kaboom": "curl https://kaboomjs.com/lib/latest/kaboom.js -o src/vendor/kaboom.js"
  },
  "standard": {
    "env": {
      "browser": true
    },
    "ignore": [
      "src/vendor/"
    ]
  },
  "devDependencies": {
    "gh-pages": "^3.1.0",
    "standard": "^16.0.3"
  }
}
