{
  "name": "blackhole",
  "version": "0.1.29",
  "scripts": {
    "serve": "node scripts/serve.js",
    "build": "node scripts/build.js",
    "build:dev": "yarn build --experimental --watch",
    "build:prod": "yarn build",
    "deploy": "yarn version --patch --no-git-tag-version && yarn build:dev && gh-pages -d dist"
  },
  "standard": {
    "env": {
      "browser": true
    },
    "ignore": [
      "src/vendor/"
    ],
    "overrides": [
      {
        "files": [
          "scripts/*.js"
        ],
        "env": {
          "node": true
        }
      }
    ]
  },
  "devDependencies": {
    "esbuild": "^0.11.22",
    "gh-pages": "^3.1.0",
    "ip": "^1.1.5",
    "recursive-copy": "^2.0.11",
    "standard": "^16.0.3"
  },
  "dependencies": {
    "kaboom": "^0.5.0"
  }
}
